{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "from": {
      "type": "string"
    },
    "to": {
      "type": "string"
    },
    "message": {
      "enum": [
        "request",
        "response",
        "info"
      ]
    },
    "body": {
      "type": "object"
    }
  },
  "required": [
    "from",
    "to",
    "message",
    "body"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "message": {
            "const": "request"
          }
        }
      },
      "then": {
        "properties": {
          "body": {
            "properties": {
              "command": {
                "type": "string"
              },
              "monitors": {
                "type": "array"
              }
            },
            "required": [
              "command",
              "monitors"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "message": {
            "const": "response"
          }
        }
      },
      "then": {
        "properties": {
          "body": {
            "oneOf": [
              {
                "properties": {
                  "code": {
                    "type": "number"
                  },
                  "error": {
                    "type": "string"
                  }
                },
                "required": ["code", "error"]
              },
              {
                "properties": {
                  "code": {
                    "type": "number"
                  },
                  "topic": {
                    "type": "string"
                  }
                },
                "required": ["code", "topic"]
              }
            ]
          }
        },
        "required": [
          "code",
          "status"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "message": {
            "const": "info"
          }
        }
      },
      "then": {
        "properties": {
          "body": {
            "properties": {
              "monitors": {
                "type": "array"
              },
              "actions": {
                "type": "array"
              },
              "message": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  ]
}